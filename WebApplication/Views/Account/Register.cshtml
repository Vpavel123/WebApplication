@model WebApplication.ViewModels.RegisterViewModel

@{
    Layout = null;
}

<html>
<head>
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
    <script src="https://kit.fontawesome.com/a9411cf797.js" crossorigin="anonymous"></script>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-offset-3 col-md-6">
                <form class="form-horizontal" method="post" asp-action="Register" asp-controller="Account">
                    <div class="validation" asp-validation-summary="ModelOnly"></div>
                    <span class="heading">Регистрация</span>
                    <div class="form-group">
                        <input type="text" class="form-control" id="inputEmail" placeholder="Имя" asp-for="Name" />
                        <i class="fa fa-user"></i>
                        <span asp-validation-for="Name" />
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" id="inputEmail" placeholder="Фамилия" asp-for="Surname" />
                        <i class="fa fa-user"></i>
                        <span asp-validation-for="Surname" />
                    </div>
                    <div class="form-group">
                        <input type="email" class="form-control" id="inputEmail" placeholder="E-mail" asp-for="Email" />
                        <i class="fas fa-envelope"></i>
                        <span asp-validation-for="Email" />
                    </div>
                    <div class="form-group help">
                        <input type="password" class="form-control" id="inputPassword" placeholder="пароль" asp-for="Password" />
                        <i class="fa fa-lock"></i>
                        <a href="#" class="fa fa-question-circle"></a>
                        <span asp-validation-for="Password" />
                    </div>
                    <div class="form-group help">
                        <input type="password" class="form-control" id="inputPassword" placeholder="Повторите пароль" asp-for="ConfirmPassword" />
                        <i class="fa fa-lock"></i>
                        <a href="#" class="fa fa-question-circle"></a>
                        <span asp-validation-for="ConfirmPassword" />
                    </div>
                    <div class="form-group">
                        <a asp-action="Login" asp-controller="Account">Вход</a>
                        <button type="submit" class="btn btn-default">Регистрация</button>
                    </div>
                </form>
            </div>
        </div><!-- /.row -->
    </div><!-- /.container -->
</body>
</html>