@using Microsoft.AspNetCore.Identity
@model WebApplication.ViewModels.ChangeDataAccount

@{
    ViewBag.Title = "Основные данные о пассажире";
}

@if (User.Identity.IsAuthenticated)
{
<div class="widget-Edit">
    <div class="widget">
        <ul>
            <li><a href="~/Account/Page/">Данные пассажира</a></li>
            <li><a href="">Ваши заказы</a></li>
            <li><a href="">Спосоь оплаты</a></li>
        </ul>
    </div>
</div>
    <div class="Layout-content-Edit">
        <div class="UserAccountContent-UserAccountProfile">
            <div class="profile">
                <div class="header-profile">
                    <header class="ContainerHeader">
                        <div class="ContainerHeaderstyles__Header">
                            <h5 class="header-profile section-profile heading">@ViewBag.Title</h5>
                        </div>
                    </header>
                </div>
                <section>
                    <div class="Layout-Edit">
                        <div class="container">
                            <div class="row">
                                <div class="col-md-offset-3">
                                    <form class="form-horizontal" method="post" asp-action="Edit" asp-controller="Page" asp-area="Account">
                                        <div class="validation" asp-validation-summary="ModelOnly"></div>
                                        <div class="form-group">
                                            <input type="text" class="form-control" id="inputEmail" placeholder="Имя" asp-for="Name" />
                                            <i class="fa fa-user"></i>
                                            <span asp-validation-for="Name" />
                                        </div>
                                        <div class="form-group">
                                            <input type="text" class="form-control" id="inputEmail" placeholder="Фамилия" asp-for="Surname" />
                                            <i class="fa fa-user"></i>
                                            <span asp-validation-for="Surname" />
                                        </div>
                                        <div class="form-group">
                                            <input type="date" class="form-control" id="inputEmail" placeholder="Дата рождения" asp-for="Date" />
                                            <i class="fas fa-table"></i>
                                            <span asp-validation-for="Date" />
                                        </div>
                                        <div class="form-group">
                                            <input type="text" class="form-control" id="inputEmail" placeholder="Адресс" asp-for="Address" />
                                            <i class="fas fa-map-marked"></i>
                                            <span asp-validation-for="Address" />
                                        </div>
                                        <div class="form-group">
                                            <input type="email" class="form-control" id="inputEmail" placeholder="E-mail" value="@User.Identity.Name" readonly="readonly" />
                                            <i class="fas fa-envelope"></i>
                                        </div>
                                        <div class="form-group">
                                            <button type="submit" class="btn btn-default">Сохранить</button>
                                        </div>
                                    </form>
                                </div>
                            </div><!-- /.row -->
                        </div><!-- /.container -->
                    </div>
                </section>
            </div>
        </div>
    </div>
}
else
{
    <a asp-controller="Account" asp-action="Login">Вход</a>
    <a asp-controller="Account" asp-action="Register">Регистрация</a>
}